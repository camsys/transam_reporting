:css
  .document.pdf
  {

  }

  th.left, td.left {
    text-align: left;
  }
  th.right, td.right {
    text-align: right;
  }
  th.center, td.center {
    text-align: center;
  }
  tr.subtotals {
    font-weight:bold;
    border-top: 2px solid #dddddd;
  }
  tr.subtotals>td {
    padding-bottom: 12px !important;
  }

  thead { display: table-header-group; }
  tfoot { display: table-row-group; }
  tr { page-break-inside: avoid !important; }

  .table.table.table-condensed.pdf
  {
    font-size: x-small;
      /*page-break-inside: avoid !important;*/
      /*background: tomato;*/
  }

  tr.order_pdf_group td {
    border-top: 4px double #323536 !important;
  }
  th.pdf_regulation_header_column{
    text-align: center;
  }
  td.regulation_header{
    font-size: medium;
  }
  td.pdf_sized_regulation_legend_column
  {
    max-width: 150px;
    text-align: center;
  }
  td.pdf_sized_regulation_description_column
  {
    min-width: 55px;
    text-align: center;
  }
  td.pdf_regulation_row_cell
  {
    text-align: center;
  }

  .row.pdf_order_info
  {
    font-size: small;
  }

  td.pdf_runsheet_info {
    width: 50%;
    font-size: medium;
  }

  tr.pdf_multi_row_header_top{
    text-align: center;
    border-bottom: none;
    border-top: none;
  }

  th.pdf_worksheet_top_header_column{
    text-align: center;
    border-bottom: none;
    border-top: none;
  }

  tr.pdf_multi_row_header_bottom{
    border-top: none;
    text-align: center;
  }

  legend.pdf
  {
    font-size: medium;
  }

  .page-break {
    display:block;
    clear:both;
    page-break-before:always;
  }
%html
  %head
    %title= app_title
    %meta{:charset => "utf-8"}
    = wicked_pdf_stylesheet_link_tag "pdf.css"
    = stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.3/leaflet.css"
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
    = stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"
    = javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.3/leaflet.js"
  %body{:style => 'margin:0;padding:0;'}
    #header
    #content
      = yield
